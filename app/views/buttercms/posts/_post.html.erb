<div>
  <!-- Featured image -->
  <%= image_tag(post.featured_image) if post.featured_image %>

  <!-- Post title -->
  <h4><%= link_to post.title, buttercms_post_path(post.slug), :title => post.title %></h4>

  <!-- Post author -->
  <!-- Escrito por: <%= link_to "#{post.author.first_name} #{post.author.last_name}", buttercms_author_path(post.author.slug) %> -->

  <!-- Post summary -->
  <div class="card"><%= post.summary %> | <%= link_to "Leer mÃ¡s...", buttercms_post_path(post.slug), :title => post.title %></div>

  <!-- Post categories -->
  <% post.categories.each do |category| %>
    <%= link_to category.name, buttercms_category_path(category.slug), :title => category.name %>
  <% end %>
</div>
