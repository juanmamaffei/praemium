  %body
    %nav
      .nav-wrapper.white
        .brand-logo.center
          =image_tag("logoh.png", :width => 250)

        -if user_signed_in?


          %ul#nav-mobile.right.black
            %a.dropdown-button{:href=>'#', "data-activates"=>'dropdown1'}
              %i.material-icons menu
            
        -else
          %ul.right.hide-on-med-and-down
            %li
              =link_to "Iniciar sesi√≥n", new_user_session_path
    %col.s12.red-text
    =render partial: "layouts/sidenav"
    .container
      .row.center
        -unless notice==nil
          .chip.center
            = notice
    = yield