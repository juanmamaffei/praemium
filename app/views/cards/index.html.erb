<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>User</th>
      <th>Country</th>
      <th>Credit1</th>
      <th>Credit2</th>
      <th>Status</th>
      <th>Credit2 enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.company %></td>
        <td><%= card.user %></td>
        <td><%= card.country %></td>
        <td><%= card.credit1 %></td>
        <td><%= card.credit2 %></td>
        <td><%= card.status %></td>
        <td><%= card.credit2_enabled %></td>
        <td><%= link_to 'Show', company_card_path(@company,card) %></td>
        <td><%= link_to 'Edit', edit_company_card_path(@company,card) %></td>
        <td><%= link_to 'Destroy', [@company,card], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

