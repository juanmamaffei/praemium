
<h1>Gestión de tarjetas y Clientes</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Número de tarjeta</th>
      <th>Pin</th>>
      <th>Apellido y nombre</th>
      <th>Saldo</th>
      <th>Estado de la tarjeta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @cards.count== %>
      
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.country.to_s + card.number.to_s + "x" %></td>
        <td><%= card.pin %></td>
        <td><% unless card.user==nil %>
          <% unless @users.find_by(id: card.user).name==nil %>
          <%=  @users[card.user].name %>
            <% end %><% end %>

          </td>
        <td><%= card.credit1 %></td>
        <td><%= card.status %></td>
        <td><%= link_to 'Movimientos', company_card_transactions_path(@company,card) %></td>
        <td><%= link_to 'Cargar', company_card_path(@company,card) %></td>
        <td><%= link_to 'Cambiar estado', edit_company_card_path(@company,card) %></td>
        <% #<td><%= link_to 'Destroy', [@company,card], method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %><% end %>
  </tbody>
</table>

<br>

<%= link_to 'Menú de gestión de empresa', company_path(@company), :class=> "btn" %>