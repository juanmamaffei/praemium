.container
  .row.verticaltotal.middle-xs
    .col.s12.z-depth-3.center.transparenciafuerte
      .col.s12
        %h5 Crear cuenta en <span class="texto-negro">praemium</span>

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        -#
          .field
            %h2 Nombre
            %br/
            = f.text_field :name
          .field
            %h2 Apellido
            %br/
            = f.text_field :last_name
          .field
            = f.label :birth_date, "Fecha de nacimiento"
            %br/
            = f.date_field :birth_date
          .field
            = f.label :dni, "DNI"
            %br/
            = f.text_field :dni

        .field
          %h2 Correo electrónico:
          %br/
          = f.email_field :email, autocomplete: "email"
        .field
          %h2 Contraseña: 
          - if @minimum_password_length
            %em
              (Al menos #{@minimum_password_length} caracteres)
          %br/
          = f.password_field :password, autocomplete: "off"
        .field
          %h2 Confirmar contraseña:
        .field
          = f.password_field :password_confirmation, autocomplete: "off"
        .row.center.center-xs
          
          = flash[:alert]
          = recaptcha_tags
        .card-action.center
          = f.submit "Registrar", :class => "btn"
        .card-action
          = render "devise/shared/links"

