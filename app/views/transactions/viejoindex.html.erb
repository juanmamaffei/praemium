%h1 Movimientos

%table
  %thead
    %tr
      %th Card
      %th Company
      %th User
      %th Amount
      %th Description
      %th{:colspan=>"3"}

  %tbody
    - @transactions.each do |transaction|
      %tr
        %td
          = transaction.card 
        %td
          = transaction.company 
        %td
          = transaction.user 
        %td
          = transaction.amount 
        %td
          = transaction.description 
        %td
          = link_to 'Show', company_card_transaction_path(@company,@card,transaction) 
        %td
          = link_to 'Edit', edit_company_card_transaction_path(@company,@card,transaction) 
        %td
          = link_to 'Destroy', company_card_transaction_path(@company,@card,transaction), method: :delete, data: { confirm: 'Are you sure?' } 
 
<br>

= link_to 'New Transaction', new_company_card_transaction_path
